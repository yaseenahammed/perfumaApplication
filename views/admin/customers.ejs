<%- include("../../views/partials/admin/header") %>

<!-- Tailwind CSS CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        theme: {
            extend: {
                animation: {
                    'fade-in': 'fadeIn 0.5s ease-in-out',
                    'slide-up': 'slideUp 0.6s ease-out',
                },
                keyframes: {
                    fadeIn: {
                        '0%': { opacity: '0' },
                        '100%': { opacity: '1' },
                    },
                    slideUp: {
                        '0%': { transform: 'translateY(30px)', opacity: '0' },
                        '100%': { transform: 'translateY(0)', opacity: '1' },
                    }
                }
            }
        }
    }
</script>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Custom button styles */
    .btn-block, .btn-unblock {
        transition: all 0.3s ease;
    }
    
    .btn-block:hover, .btn-unblock:hover {
        transform: scale(1.05);
    }
    
    .table-row {
        transition: all 0.3s ease;
    }
    
    .table-row:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    /* Override to align with header */
    .main-wrap {
        padding-top: 0; /* Remove extra padding to match header */
    }
</style>

<body class="bg-gray-50">
    <!-- Page Header -->
    <!-- <section class="relative bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900">
        <div class="relative z-10 container mx-auto px-4 text-center text-white py-4">
            <h1 class="text-4xl lg:text-5xl font-bold mb-2 animate-fade-in">Customers</h1>
            <nav class="flex items-center justify-center space-x-2 text-lg">
                <a href="/admin" class="text-gray-300 hover:text-white transition duration-200">Admin Dashboard</a>
                <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                <span class="text-amber-400">Customers</span>
            </nav>
        </div>
    </section> -->

    <!-- Main Content -->
    <main class="main-wrap">
        <div class="container mx-auto px-4">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white rounded-2xl shadow-xl p-6 animate-slide-up">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 flex items-center">
                            <i class="fas fa-users text-amber-500 mr-3"></i>
                            Customers
                        </h2>
                    </div>

                    <!-- Search Bar -->
                    <header class="text-center mb-6">
                        <form action="/admin/users" method="get" class="d-inline">
                            <div class="flex justify-center">
                                <div class="relative w-full max-w-md">
                                    <input 
                                        type="text" 
                                        class="w-full border border-gray-200 rounded-full py-3 px-6 text-gray-600 focus:outline-none focus:ring-2 focus:ring-amber-500 bg-gray-50" 
                                        placeholder="Search customers..." 
                                        name="search"
                                    >
                                    <button 
                                        class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-gradient-to-r from-amber-500 to-orange-500 text-white px-4 py-2 rounded-full hover:from-amber-600 hover:to-orange-600 transition duration-300"
                                        type="submit"
                                    >
                                        Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </header>

                    <!-- Customers Table -->
                    <div class="overflow-x-auto">
                        <table class="w-full table-auto">
                            <thead>
                                <tr class="bg-gray-100 text-gray-900 text-left">
                                    <th class="px-6 py-4 font-bold">Name</th>
                                    <th class="px-6 py-4 font-bold">Email</th>
                                    <th class="px-6 py-4 font-bold">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < data.length; i++) { %>
                                    <tr class="table-row bg-gray-50 border-b border-gray-200 hover:bg-gray-100">
                                        <td class="px-6 py-4 text-gray-900"><%= data[i].name %></td>
                                        <td class="px-6 py-4 text-gray-600"><%= data[i].email %></td>
                                        <td class="px-6 py-4">
                                            <% if(data[i].isBlocked === false) { %>
                                                <a 
                                                    href="/admin/blockCustomer?id=<%= data[i]._id %>" 
                                                    class="btn-block bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-semibold transition-all duration-300 inline-flex items-center"
                                                    style="width: 100px;"
                                                    onclick="return confirmBlock(event)"
                                                >
                                                    <i class="fas fa-ban mr-2"></i>
                                                    Block
                                                </a>
                                            <% } else { %>
                                                <a 
                                                    href="/admin/unblockCustomer?id=<%= data[i]._id %>" 
                                                    class="btn-unblock bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-semibold transition-all duration-300 inline-flex items-center"
                                                    style="width: 100px;"
                                                    onclick="return confirmUnblockWithSwal(event)"
                                                >
                                                    <i class="fas fa-check mr-2"></i>
                                                    Unblock
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="pagination-container mt-6">
                        <% if (currentPage > 1) { %>
                            <a href="?page=<%= currentPage - 1 %>" class="bg-gray-50 text-amber-600 border-amber-500 hover:bg-amber-500 hover:text-white hover:border-amber-600 px-4 py-2 rounded-lg transition-all duration-200">« Previous</a>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <% if (i === currentPage) { %>
                                <span class="current-page bg-amber-500 text-white border-amber-500 px-4 py-2 rounded-lg font-bold"><%= i %></span>
                            <% } else { %>
                                <a href="?page=<%= i %>" class="bg-gray-50 text-amber-600 border-amber-500 hover:bg-amber-500 hover:text-white hover:border-amber-600 px-4 py-2 rounded-lg transition-all duration-200"><%= i %></a>
                            <% } %>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <a href="?page=<%= currentPage + 1 %>" class="bg-gray-50 text-amber-600 border-amber-500 hover:bg-amber-500 hover:text-white hover:border-amber-600 px-4 py-2 rounded-lg transition-all duration-200">Next »</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function confirmBlock(event) {
            event.preventDefault();
            const url = event.currentTarget.getAttribute('href');
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to block this customer?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, block it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            });
            return false;
        }

        function confirmUnblockWithSwal(event) {
            event.preventDefault();
            const url = event.currentTarget.getAttribute('href');
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to unblock this customer?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, unblock it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            });
            return false;
        }
    </script>

    <%- include("../../views/partials/admin/footer") %>
</body>
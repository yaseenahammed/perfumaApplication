<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Management - Perfuma</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.6s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(30px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        }
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom button styles */
        .btn-primary, .btn-cancel {
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: scale(1.05);
            background: linear-gradient(to-r, #c79f15, #a67b0a);
        }
        .btn-cancel:hover {
            transform: scale(1.05);
            background: #c53030;
        }
        .address-card {
            transition: all 0.3s ease;
        }
        .address-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .modal-content {
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }
        .modal-header {
            background: linear-gradient(to-r, #d4a017, #b8860b);
            color: #fff;
            border-radius: 12px 12px 0 0;
        }
    </style>
</head>
<body class="bg-gray-50">
    <%- include("../partials/user/header") %>

    <!-- Page Header -->
    <section class="relative py-16 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900">
        <div class="relative z-10 container mx-auto px-4 text-center text-white">
            <h1 class="text-4xl lg:text-5xl font-bold mb-4 animate-fade-in">Address Management</h1>
            <nav class="flex items-center justify-center space-x-2 text-lg">
                <a href="/dashboard" class="text-gray-300 hover:text-white transition duration-200">Dashboard</a>
                <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                <span class="text-amber-400">Address Management</span>
            </nav>
        </div>
    </section>

    <!-- Main Address Section -->
    <main class="py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white rounded-2xl shadow-xl p-8 animate-fade-in">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 flex items-center">
                            <i class="fas fa-map-marker-alt text-amber-500 mr-3"></i>
                            Address Management
                        </h2>
                    </div>
                    <p class="text-gray-600 mb-8">Manage your shipping addresses</p>

                    <!-- Address Table -->
                    <div class="address-section animate-slide-up">
                        <div class="address-card bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-xl font-bold text-gray-900 flex items-center">
                                    <i class="fas fa-address-book text-amber-500 mr-3"></i>
                                    Your Addresses
                                </h3>
                                <button class="btn-primary inline-flex items-center px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                                    <i class="fas fa-plus mr-2"></i>
                                    Add New Address
                                </button>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left">
                                    <thead>
                                        <tr class="text-gray-600">
                                            <th class="p-4">Phone</th>
                                            <th class="p-4">Street</th>
                                            <th class="p-4">City</th>
                                            <th class="p-4">State</th>
                                            <th class="p-4">Pincode</th>
                                            <th class="p-4">Country</th>
                                            <th class="p-4">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (addresses && addresses.length > 0) { %>
                                            <% addresses.forEach((address, index) => { %>
                                                <tr class="border-t border-gray-200">
                                                    <td class="p-4 text-gray-900"><%= address.phone || '' %></td>
                                                    <td class="p-4 text-gray-900"><%= address.street || '' %></td>
                                                    <td class="p-4 text-gray-900"><%= address.city || '' %></td>
                                                    <td class="p-4 text-gray-900"><%= address.state || '' %></td>
                                                    <td class="p-4 text-gray-900"><%= address.zip || '' %></td>
                                                    <td class="p-4 text-gray-900"><%= address.country || '' %></td>
                                                    <td class="p-4">
                                                        <button class="btn-primary inline-flex items-center px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300 mr-2" data-bs-toggle="modal" data-bs-target="#editAddressModal" data-address-id="<%= index %>" data-phone="<%= address.phone || '' %>"
                                                             data-street="<%= address.street || '' %>" data-city="<%= address.city || '' %>" data-state="<%= address.state || '' %>" data-zip="<%= address.zip || '' %>" data-country="<%= address.country || '' %>">
                                                            <i class="fas fa-edit mr-2"></i>
                                                            Edit
                                                        </button>
                                                        <form class="delete-address-form" action="/delete-address/<%= index %>" method="POST" style="display: inline;">
                                                            <button type="submit" class="btn-cancel inline-flex items-center px-4 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition duration-300">
                                                                <i class="fas fa-trash mr-2"></i>
                                                                Delete
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6" class="text-center p-4 text-gray-600">No addresses found. Add a new address to get started.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Address Modal -->
    <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAddressModalLabel">Add New Address</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addAddressForm" action="/add-address" method="POST">
                    <div class="modal-body">
                   <div class="mb-3">
                      <label for="phone" class="form-label text-gray-900">Phone</label>
                      <input type="text" name="phone" class="form-control" id="phone" pattern="\d{10}" required title="Phone must be 10 digits">
                      
                   </div>

                        <div class="mb-3">
                            <label for="street" class="form-label text-gray-900">Street</label>
                            <input type="text" class="form-control" id="street" name="street" required>
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label text-gray-900">City</label>
                            <input type="text" class="form-control" id="city" name="city" required>
                        </div>
                        <div class="mb-3">
                            <label for="state" class="form-label text-gray-900">State</label>
                            <input type="text" class="form-control" id="state" name="state" required>
                        </div>
                        <div class="mb-3">
                            <label for="zip" class="form-label text-gray-900">Pincode</label>
                           
                            <input type="text" name="zip" class="form-control" id="zip" pattern="\d{6}" required title="Pincode must be 6 digits">
                        </div>
                        <div class="mb-3">
                            <label for="country" class="form-label text-gray-900">Country</label>
                            <input type="text" class="form-control" id="country" name="country" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn-cancel px-4 py-2 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600 transition duration-300" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn-primary px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">Save Address</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Address Modal -->
    <div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAddressModalLabel">Edit Address</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editAddressForm" action="/edit-address" method="POST">
                    <div class="modal-body">
                        <input type="hidden" id="addressId" name="addressId">
                        <div class="mb-3">
                     <label for="phone" class="form-label text-gray-900">Phone</label>
                     <input type="text" name="phone" class="form-control" id="editPhone" pattern="\d{10}" required title="Phone must be 10 digits">
                        </div>

                        <div class="mb-3">
                            <label for="editStreet" class="form-label text-gray-900">Street</label>
                            <input type="text" class="form-control" id="editStreet" name="street" required>
                        </div>
                        <div class="mb-3">
                            <label for="editCity" class="form-label text-gray-900">City</label>
                            <input type="text" class="form-control" id="editCity" name="city" required>
                        </div>
                        <div class="mb-3">
                            <label for="editState" class="form-label text-gray-900">State</label>
                            <input type="text" class="form-control" id="editState" name="state" required>
                        </div>
                        <div class="mb-3">
                            <label for="editZip" class="form-label text-gray-900">Pincode</label>
                         <input type="text" name="zip" class="form-control" id="editZip" pattern="\d{6}" required title="Pincode must be 6 digits">
                        </div>
                        <div class="mb-3">
                            <label for="editCountry" class="form-label text-gray-900">Country</label>
                            <input type="text" class="form-control" id="editCountry" name="country" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn-cancel px-4 py-2 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600 transition duration-300" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn-primary px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">Update Address</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("../partials/user/footer") %>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const editModal = document.getElementById('editAddressModal');

      
        editModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; 

          
            const addressId = button.getAttribute('data-address-id');
            const phone = button.getAttribute('data-phone');
            const street = button.getAttribute('data-street');
            const city = button.getAttribute('data-city');
            const state = button.getAttribute('data-state');
            const zip = button.getAttribute('data-zip');
            const country = button.getAttribute('data-country');

          
            this.querySelector('#addressId').value = addressId;
            this.querySelector('#editPhone').value = phone;
            this.querySelector('#editStreet').value = street;
            this.querySelector('#editCity').value = city;
            this.querySelector('#editState').value = state;
            this.querySelector('#editZip').value = zip;
            this.querySelector('#editCountry').value = country;
        });
    });



function validateAddressForm(form) {
  const phone = form.phone.value.trim();
  const street = form.street.value.trim();
  const city = form.city.value.trim();
  const state = form.state.value.trim();
  const zip = form.zip.value.trim();
  const country = form.country.value.trim();


  const phoneRegex = /^(?!.*(\d)\1{9})(?!.*[^\d])\d{10}$/;
  const zipRegex = /^(?!.*(\d)\1{5})(?!.*[^\d])\d{6}$/;

  if (!phoneRegex.test(phone)) {
    Swal.fire({
      icon: 'error',
      title: 'Invalid Phone Number',
      text: 'Phone must be 10 digits, not all same, and contain only numbers.',
    });
    return false;
  }

  if (!zipRegex.test(zip)) {
    Swal.fire({
      icon: 'error',
      title: 'Invalid Pincode',
      text: 'Pincode must be 6 digits, not all same, and contain only numbers.',
    });
    return false;
  }

  if (!street || !city || !state || !country) {
    Swal.fire({
      icon: 'warning',
      title: 'Missing Fields',
      text: 'Please fill in all address fields.',
    });
    return false;
  }

  return true; 
}

document.addEventListener('DOMContentLoaded', () => {
  const addForm = document.getElementById('addAddressForm');
  const editForm = document.getElementById('editAddressForm');

  if (addForm) {
    addForm.addEventListener('submit', function (e) {
      if (!validateAddressForm(this)) {
        e.preventDefault();
      }
    });
  }

  if (editForm) {
    editForm.addEventListener('submit', function (e) {
      if (!validateAddressForm(this)) {
        e.preventDefault();
      }
    });
  }
});

document.querySelectorAll('.delete-address-form').forEach(form=>{
    form.addEventListener('submit',function(e){
        e.preventDefault()

        Swal.fire({
            title:'Are you sure?',
            text:'This address will be permanantly deleted.',
            icon:'warning',
            showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete it!',
        reverseButtons: true,
        }).then((result)=>{
            if(result.isConfirmed){
                form.submit()
            }
        })
    })
})
</script>






</body>
</html>
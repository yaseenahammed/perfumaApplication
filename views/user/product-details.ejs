                                        >
                                    </a>
                                    <button onclick="addToWishlist('<%= similarProduct._id %>')" class="absolute top-3 right-3 w-10 h-10 bg-white/80 backdrop-blur-sm rounded-full flex items-center justify-center text-red-500 hover:bg-white hover:text-red-600 transition duration-300 shadow-lg">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>

                                <div class="space-y-4">
                                    <h3 class="text-lg font-semibold text-gray-900 hover:text-amber-600 transition duration-200">
                                        <a href="/productDetails?id=<%= similarProduct._id %>"><%= similarProduct.name %></a>
                                    </h3>

                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-2">
                                            <span class="text-xl font-bold text-amber-600">₹<%= similarProduct.salePrice || similarProduct.regularPrice %></span>
                                            <% if (similarProduct.salePrice && similarProduct.salePrice < similarProduct.regularPrice) { %>
                                                <span class="text-sm text-gray-500 line-through">₹<%= similarProduct.regularPrice %></span>
                                            <% } %>
                                        </div>
                                        <div class="flex text-amber-400">
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-16">
                        <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-search text-gray-400 text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">No Similar Products</h3>
                        <p class="text-gray-600">No similar products found in this category.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <%- include("../partials/user/footer") %>

    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Zoom functionality
            const zoomContainer = document.querySelector('.main-product-image');
            const zoomImage = document.getElementById('mainImage');
            const zoomLens = document.getElementById('zoomLens');
            const zoomResult = document.getElementById('zoomResult');
            let zoomLevel = 2.5;
            let isTouching = false;

            function updateZoom(e, clientX, clientY) {
                const rect = zoomImage.getBoundingClientRect();
                const x = clientX - rect.left;
                const y = clientY - rect.top;
                const lensWidth = zoomLens.offsetWidth;
                const lensHeight = zoomLens.offsetHeight;
                let lensX = x - lensWidth / 2;
                let lensY = y - lensHeight / 2;
                lensX = Math.max(0, Math.min(lensX, rect.width - lensWidth));
                lensY = Math.max(0, Math.min(lensY, rect.height - lensHeight));
                zoomLens.style.left = `${lensX}px`;
                zoomLens.style.top = `${lensY}px`;
                zoomResult.style.backgroundImage = `url(${zoomImage.src})`;
                zoomResult.style.backgroundSize = `${rect.width * zoomLevel}px ${rect.height * zoomLevel}px`;
                zoomResult.style.backgroundPosition = `-${lensX * zoomLevel}px -${lensY * zoomLevel}px`;
            }

            // Mouse events for zoom
            zoomContainer.addEventListener('mouseenter', () => {
                if (window.innerWidth > 768) {
                    zoomLens.style.display = 'block';
                    zoomResult.style.display = 'block';
                }
            });

            zoomContainer.addEventListener('mouseleave', () => {
                zoomLens.style.display = 'none';
                zoomResult.style.display = 'none';
            });

            zoomContainer.addEventListener('mousemove', (e) => {
                if (window.innerWidth > 768) updateZoom(e, e.clientX, e.clientY);
            });

            // Touch events for mobile zoom
            zoomContainer.addEventListener('touchstart', (e) => {
                e.preventDefault();
                if (window.innerWidth <= 768) {
                    isTouching = true;
                    zoomLens.style.display = 'block';
                    zoomResult.style.display = 'block';
                    const touch = e.touches[0];
                    updateZoom(e, touch.clientX, touch.clientY);
                }
            });

            zoomContainer.addEventListener('touchmove', (e) => {
                if (isTouching && window.innerWidth <= 768) {
                    e.preventDefault();
                    const touch = e.touches[0];
                    updateZoom(e, touch.clientX, touch.clientY);
                }
            });

            zoomContainer.addEventListener('touchend', () => {
                isTouching = false;
                zoomLens.style.display = 'none';
                zoomResult.style.display = 'none';
            });

            // Change main image function
            window.changeMainImage = function (imageSrc, element) {
                zoomImage.src = imageSrc;
                zoomResult.style.backgroundImage = `url(${imageSrc})`;
                document.querySelectorAll('.thumbnail-item').forEach((thumb) => {
                    thumb.classList.remove('active');
                });
                element.parentElement.classList.add('active');
            };

            // Quantity controls for main product
            const qtyDown = document.querySelector('.detail-qty .qty-down');
            const qtyUp = document.querySelector('.detail-qty .qty-up');
            const qtyVal = document.getElementById('quantity');
            const maxStock = parseInt(document.querySelector('#addToCartBtn')?.getAttribute('data-max-stock')) || 0;

            qtyDown.addEventListener('click', (e) => {
                e.preventDefault();
                let value = parseInt(qtyVal.textContent);
                if (value > 1) qtyVal.textContent = value - 1;
            });

            qtyUp.addEventListener('click', (e) => {
                e.preventDefault();
                let value = parseInt(qtyVal.textContent);
                if (value < maxStock) qtyVal.textContent = value + 1;
            });

            // Add to cart for main product
            const addToCartBtn = document.getElementById('addToCartBtn');
if (addToCartBtn) {
  addToCartBtn.addEventListener('click', async () => {
    const productId = addToCartBtn.getAttribute('data-product-id');
    const quantity = parseInt(qtyVal.textContent);
    addToCartBtn.classList.add('loading');

    try {
    const response = await fetch(`/add-to-cart/${productId}`, {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  credentials: 'same-origin',
  body: JSON.stringify({ quantity }),
});

if (response.redirected) {
  window.location.href = response.url;
  return;
}

if (response.status === 401) {
  window.location.href = '/login';
  return;
}

const data = await response.json();

if (data.success) {
  Swal.fire({
    icon: 'success',
    title: 'Added to cart',
    text: 'Your product has been successfully added to your cart.',
    showConfirmButton: false,
    timer: 1500
  }).then(() => {
    window.location.href = '/productDetails';
  });
} else {
  Swal.fire({
    icon: 'error',
    title: data.error || 'Failed to add to cart',
    timer: 1500
  });
}

    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'An error occurred. Please try again.',
        timer: 1500
      });
    } finally {
      addToCartBtn.classList.remove('loading');
    }
  });
}



           
            window.addToWishlist = (productId) => {
                console.log('Add to wishlist:', productId);
               
            };
        });
    </script>

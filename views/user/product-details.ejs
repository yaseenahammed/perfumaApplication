                            <div>
                                <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4"><%= product.name %></h1>
                                
                                <!-- Brand and Rating -->
                                <div class="flex items-center justify-between mb-6">
                                    <div class="flex items-center space-x-4">
                                        <span class="text-gray-600">Brand:</span>
                                        <a href="#" class="text-amber-600 hover:text-amber-700 font-semibold transition duration-200">
                                            <%= product.brand?.name || 'Unknown' %>
                                        </a>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <div class="flex text-amber-400">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <span class="text-gray-500 text-sm">(25 reviews)</span>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="mb-6">
                                    <div class="flex items-center space-x-4">
                                        <span class="text-4xl font-bold text-amber-600">₹<%= product.salePrice || product.regularPrice %></span>
                                        <% if (product.salePrice && product.salePrice < product.regularPrice) { %>
                                            <span class="text-xl text-gray-500 line-through">₹<%= product.regularPrice %></span>
                                            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                                                <%= Math.round((product.regularPrice - product.salePrice) / product.regularPrice * 100) %>% Off
                                            </span>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="mb-6">
                                    <p class="text-gray-700 leading-relaxed text-lg"><%= product.description || 'No description available.' %></p>
                                </div>

                                <!-- Features -->
                                <div class="bg-amber-50 rounded-xl p-6 mb-6">
                                    <ul class="space-y-3">
                                        <li class="flex items-center text-gray-700">
                                            <i class="fas fa-crown text-amber-500 mr-3"></i>
                                            1 Year Brand Warranty
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <i class="fas fa-undo text-amber-500 mr-3"></i>
                                            30 Day Return Policy
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <i class="fas fa-money-bill-wave text-amber-500 mr-3"></i>
                                            Cash on Delivery available
                                        </li>
                                    </ul>
                                </div>

                                <!-- Quantity and Add to Cart -->
                                <div class="flex items-center space-x-4 mb-6">
                                    <div class="detail-qty">
                                        <a href="#" class="qty-down"><i class="fas fa-minus"></i></a>
                                        <span class="qty-val" id="quantity">1</span>
                                        <a href="#" class="qty-up"><i class="fas fa-plus"></i></a>
                                    </div>
                                    <button 
                                        type="button" 
                                        class="button-add-to-cart flex-1" 
                                        id="addToCartBtn" 
                                        data-product-id="<%= product._id %>" 
                                        data-max-stock="<%= product.quantity %>" 
                                        <%= product.quantity <= 0 || !product.isListed || product.isBlocked ? 'disabled' : '' %>
                                    >
                                        <i class="fas fa-shopping-cart mr-2"></i>
                                        Add to Cart
                                    </button>
                                    <a class="action-btn" onclick="addToWishlist('<%= product._id %>')">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </div>

                                <!-- Product Meta -->
                                <div class="border-t border-gray-200 pt-6">
                                    <ul class="space-y-2 text-gray-600">
                                        <li><strong>Stock Code:</strong> <%= product._id %></li>
                                        <li><strong>Category:</strong> 
                                            <span class="text-amber-600"><%= product.category?.name || 'No Category' %></span>
                                        </li>
                                        <li><strong>Availability:</strong> 
                                            <span class="<%= product.status === 'available' ? 'text-green-600' : 'text-red-600' %> font-semibold">
                                                <%= product.status === 'available' ? 'In Stock' : 'Out of Stock' %>
                                                <%= product.quantity > 0 ? '(' + product.quantity + ' left)' : '' %>
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Similar Products Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-7xl mx-auto">

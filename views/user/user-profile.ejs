<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Perfuma</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.6s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(30px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        }
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom button styles */
        .btn-primary, .btn-cancel {
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #c79f15, #a67b0a);
        }
        .btn-cancel:hover {
            transform: scale(1.05);
            background: #c53030;
        }
        .profile-card, .order-card {
            transition: all 0.3s ease;
        }
        .profile-card:hover, .order-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .status {
            transition: transform 0.3s ease;
        }
        .status:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    <%- include("../partials/user/header") %>

    <!-- Page Header -->
    <section class="relative py-16 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900">
        <div class="relative z-10 container mx-auto px-4 text-center text-white">
            <h1 class="text-4xl lg:text-5xl font-bold mb-4 animate-fade-in">My Profile</h1>
            <nav class="flex items-center justify-center space-x-2 text-lg">
                <a href="/" class="text-gray-300 hover:text-white transition duration-200">Home</a>
                <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                <span class="text-amber-400">Profile</span>
            </nav>
        </div>
    </section>

    <!-- Main Profile Section -->
    <main class="py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white rounded-2xl shadow-xl p-8 animate-fade-in">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 flex items-center">
                            <i class="fas fa-user text-amber-500 mr-3"></i>
                            My Profile
                        </h2>
                        <a href="/user-address" class="btn-primary inline-flex items-center px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            Manage Address
                        </a>
                    </div>
                    <p class="text-gray-600 mb-8">Manage your account and view your orders</p>

                    <!-- Profile Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-12 animate-slide-up">
                        <div class="profile-card bg-gray-50 rounded-xl p-6 border border-gray-200 text-center">
                            <img src="<%= user.profileImage %>" alt="Profile Image" class="w-20 h-20 rounded-full object-cover mx-auto mb-4 shadow-md">
                            <h6 class="text-lg font-semibold text-gray-900"><%= user.name %></h6>
                            <p class="text-gray-600 text-sm"><%= user.email %></p>

                            <p class="text-gray-700 text-sm mt-2">
  Referral Code: 
  <span class="font-mono bg-gray-200 px-2 py-1 rounded text-gray-800"><%= user.referralToken %></span>
</p>

<p class="text-xs text-gray-500 mt-1">
  Share this link: 
  <input type="text" value="http://localhost:3000/signup?ref=<%= user.referralToken %>" readonly class="mt-1 w-full text-center text-sm bg-white border border-gray-300 rounded px-2 py-1">
</p>

  <button onclick="copyReferral()" class="mt-2 text-blue-600 underline text-sm">Copy Link</button>

                            
                            <a href="/edit-profile" class="btn-primary inline-flex items-center mt-4 px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">
                                <i class="fas fa-edit mr-2"></i>
                                Edit Profile
                            </a>
                        </div>
                        <div class="profile-card bg-gray-50 rounded-xl p-6 border border-gray-200 text-center">
                            <i class="fas fa-shopping-bag text-amber-500 text-3xl mb-4"></i>
                            <h6 class="text-lg font-semibold text-gray-900"><%= orders.length %></h6>
                            <p class="text-gray-600 text-sm">Total Orders</p>
                        </div>
                        <div class="profile-card bg-gray-50 rounded-xl p-6 border border-gray-200 text-center">
                            <i class="fas fa-dollar-sign text-amber-500 text-3xl mb-4"></i>
                            <h6 class="text-lg font-semibold text-gray-900">$<%= orders.reduce((sum, order) => sum + order.total, 0).toFixed(2) %></h6>
                            <p class="text-gray-600 text-sm">Total Spent</p>
                        </div>
                        <div class="profile-card bg-gray-50 rounded-xl p-6 border border-gray-200 text-center">
                            <i class="fas fa-star text-amber-500 text-3xl mb-4"></i>
                            <h6 class="text-lg font-semibold text-gray-900">Gold</h6>
                            <p class="text-gray-600 text-sm">Member Status</p>
                        </div>
                        <div class="profile-card bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <i class="fas fa-map-marker-alt text-amber-500 text-3xl mb-4"></i>
                            <h6 class="text-lg font-semibold text-gray-900">Shipping Address</h6>
                           <% if (defaultAddress) { %>
  <address class="text-gray-600 text-sm not-italic">
    <%= defaultAddress.street %>,<br>
    <%= defaultAddress.city %>, <%= defaultAddress.state %>,<br>
    <%= defaultAddress.zip %>, <%= defaultAddress.country %>
  </address>
  <span class="text-green-600 text-sm font-semibold">Verified (Default)</span>
<% } else { %>
  <address class="text-gray-600 text-sm not-italic">No address set</address>
<% } %>

                        </div>
                    </div>

                    <!-- Recent Orders -->
                    <div class="recent-orders">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-xl font-bold text-gray-900 flex items-center">
                                <i class="fas fa-receipt text-amber-500 mr-3"></i>
                                Recent Orders
                            </h3>
                            <a href="#orders" class="text-amber-600 hover:text-amber-700 font-semibold transition duration-200">View All Orders</a>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="order-card bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h6 class="text-lg font-semibold text-gray-900">#ORD-001 <span class="status bg-green-500 text-white px-2 py-1 rounded-full text-xs">Delivered</span></h6>
                                <p class="text-gray-600 text-sm">Month DD, YYYY</p>
                                <p class="text-amber-600 font-semibold">$0.00</p>
                                <p class="text-gray-600 text-sm">0 items</p>
                                <a href="#" class="btn-primary inline-flex items-center mt-4 px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">
                                    <i class="fas fa-eye mr-2"></i>
                                    View Details
                                </a>
                            </div>
                            <div class="order-card bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h6 class="text-lg font-semibold text-gray-900">#ORD-002 <span class="status bg-blue-500 text-white px-2 py-1 rounded-full text-xs">Shipped</span></h6>
                                <p class="text-gray-600 text-sm">Month DD, YYYY</p>
                                <p class="text-amber-600 font-semibold">$0.00</p>
                                <p class="text-gray-600 text-sm">0 items</p>
                                <a href="#" class="btn-primary inline-flex items-center mt-4 px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">
                                    <i class="fas fa-truck mr-2"></i>
                                    Track Order
                                </a>
                            </div>
                            <div class="order-card bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h6 class="text-lg font-semibold text-gray-900">#ORD-003 <span class="status bg-yellow-500 text-white px-2 py-1 rounded-full text-xs">Processing</span></h6>
                                <p class="text-gray-600 text-sm">Month DD, YYYY</p>
                                <p class="text-amber-600 font-semibold">$0.00</p>
                                <p class="text-gray-600 text-sm">0 items</p>
                                <a href="#" class="btn-primary inline-flex items-center mt-2 px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg hover:from-amber-600 hover:to-orange-600 transition duration-300">
                                    <i class="fas fa-eye mr-2"></i>
                                    View Details
                                </a>
                                <button class="btn-cancel mt-2 px-4 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition duration-300">
                                    <i class="fas fa-times mr-2"></i>
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>

                   
                </div>
            </div>
        </div>
    </main>

    <%- include("../partials/user/footer") %>
</body>
</html>

<script>
      function copyReferral() {
    const input = document.querySelector('input');
    input.select();
    document.execCommand('copy');
    alert('Referral link copied!');
  }
</script>
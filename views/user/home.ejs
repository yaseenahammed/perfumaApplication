        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="men-item-carousel">
          <div class="owl-men-item owl-carousel">
            <% for(let i = 0; i < menPerfumes.length && i < 4; i++) { %>
              <div class="item">
                <div class="thumb">
                  <div class="hover-content">
                    <ul>
                      <li><a href="/productDetails?id=<%= menPerfumes[i]._id %>"><i class="fa fa-eye"></i></a></li>
                      <li><a href="/productDetails?id=<%= menPerfumes[i]._id %>"><i class="fa fa-star"></i></a></li>

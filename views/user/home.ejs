    </section>

    <!-- Category Section -->
    <section class="py-20 bg-white" id="categories">
        <div class="container mx-auto px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Shop By Category</h2>
